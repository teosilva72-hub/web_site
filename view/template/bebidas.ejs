        <path
            d="M13.902.334a.5.5 0 0 1-.28.65l-2.254.902-.4 1.927c.376.095.715.215.972.367.228.135.56.396.56.82 0 .046-.004.09-.011.132l-.962 9.068a1.28 1.28 0 0 1-.524.93c-.488.34-1.494.87-3.01.87-1.516 0-2.522-.53-3.01-.87a1.28 1.28 0 0 1-.524-.93L3.51 5.132A.78.78 0 0 1 3.5 5c0-.424.332-.685.56-.82.262-.154.607-.276.99-.372C5.824 3.614 6.867 3.5 8 3.5c.712 0 1.389.045 1.985.127l.464-2.215a.5.5 0 0 1 .303-.356l2.5-1a.5.5 0 0 1 .65.278zM9.768 4.607A13.991 13.991 0 0 0 8 4.5c-1.076 0-2.033.11-2.707.278A3.284 3.284 0 0 0 4.645 5c.146.073.362.15.648.222C5.967 5.39 6.924 5.5 8 5.5c.571 0 1.109-.03 1.588-.085l.18-.808zm.292 1.756C9.445 6.45 8.742 6.5 8 6.5c-1.133 0-2.176-.114-2.95-.308a5.514 5.514 0 0 1-.435-.127l.838 8.03c.013.121.06.186.102.215.357.249 1.168.69 2.438.69 1.27 0 2.081-.441 2.438-.69.042-.029.09-.094.102-.215l.852-8.03a5.517 5.517 0 0 1-.435.127 8.88 8.88 0 0 1-.89.17zM4.467 4.884s.003.002.005.006l-.005-.006zm7.066 0-.005.006c.002-.004.005-.006.005-.006zM11.354 5a3.174 3.174 0 0 0-.604-.21l-.099.445.055-.013c.286-.072.502-.149.648-.222z" />
    </svg>
</button>

<div class="modal fade" id="bebidas" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="exampleModalLabel">Bebidas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <hr>
                    <input class="form-control" id="searchBebidas" type="text" placeholder="Pesquisar produto" aria-label="Search">
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="modal-body">
                <div class="row listBebidas">
                    <% for (var i=0; i <bebidas.length; i++ ) { %>
                        <div class="row get-bebida">
                            <div class="col-4">
                                <img class="imgBebidas" src="<%= bebidas[i].imagem %>">
                            </div>
                            <div class="col-8 getBebidas">
                                <div class="row">
                                    <div class="col-12">
                                        <span>
                                            <%= bebidas[i].categoria %>:
                                        </span>
                                        <b>
                                            <p class="itemBebida<%= i%>">
                                                <%= bebidas[i].name %>
                                            </p>
                                        </b>
                                    </div>
                                    <div class="col-6">
                                        <span>Descrição:</span>
                                        <b>
                                            <p class="itemBebida<%= i%>">
                                                <%= bebidas[i].descricao %>
                                            </p>
                                        </b>
                                    </div>
                                    <div class="col-6">
                                        <span>Valor:</span>
                                        <b>
                                            <p class="itemBebida<%= i%>">
                                                <%= bebidas[i].valor %>
                                            </p>
                                        </b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <span></span>
                                <select value="" id="uniBebidas<%=i %>" class="form-control"
                                    onclick="(selectInput(this.id))">
                                    <option value="">Unidades</option>
                                </select>
                                <input type="hidden" class="uniBebidas<%=i %> itemBebida<%= i%>">
                            </div>
                            <div class="col-6"><button onclick="getBebidas(this.id)" id="itemBebida<%=i %>"
                                    type="button" style="width: 100%;" class="btn btn-danger"><svg width="20"
                                        height="20" fill="currentColor" class="bi bi-cart-plus-fill"
                                        viewBox="0 0 16 16">
                                        <path
                                            d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z" />
                                    </svg></button></div>
                            <div class="col-12">
                                <hr>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Continuar Comprando</button>
            </div>
        </div>
    </div>
</div>