<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Produto</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/css/cadastrarProd.css">
    <link rel="stylesheet" href="/css/estrelaEfeito.css">
</head>

<body>
    <nav>
        <%- include('./navbar.ejs') %>
    </nav>
    <section id="section">
        <article id="register-product" class="container">
            <div class="row">
                <hr>
                <h3 class="text-center">Cadastrar Produto</h3>
                <hr>
                <form method="post">
                    <div class="col-12">
                        <span for="Categoria">Categoria</span>
                        <input type="text" id="categoria" name="categoria" class="form-control" value="" required>
                        <hr>
                    </div>
                    <div class="col-12">
                        <span for="nome">Nome do Produto</span>
                        <input type="text" id="nome" name="name" class="form-control" value="" required>
                        <hr>
                    </div>
                    <div class="col-12">
                        <span for="nome">Descrição</span>
                        <input type="text" id="descricao" name="descricao" class="form-control" value="" required>
                        <hr>
                    </div>
                    <div class="col-12">
                        <span for="valor">Valor</span>
                        <input type="text" id="Valor" name="valor" class="form-control" value="" required>
                        <hr>
                    </div>
                    <div class="col-12">
                        <span for="valor">Imagem</span>
                        <input type="file" id="imagem" name="imagem" class="form-control" value="" required>
                        <hr>
                    </div>
                    <div class="col-12">
                        <hr>
                        <button type="submit" class="btn btn-dark">Cadastrar</button>
                        <a href="/" class="btn btn-danger">Tela Inicial</a>
                    </div>
                </form>
            </div>
        </article>
    </section>
    <script src="/jquery/dist/jquery.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.js"></script>
</body>

</html>